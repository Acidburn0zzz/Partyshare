{
  "name": "partyshare.busterlabs.xyz",
  "version": "0.0.1",
  "description": "A file sharing app using IPFS (InterPlanetary File System)",
  "main": "src/electron/main.js",
  "scripts": {
    "electron": "ENV=dev electron src/electron/main.js",
    "fix_asar": "sed -i '' 's|run(cmd, args|run(cmd.replace(\"app.asar\", \"app.asar.unpacked\"), args|' node_modules/ipfsd-ctl/src/exec.js",
    "lint": "eslint --ext .js --ext .jsx --format=node_modules/eslint-formatter-pretty src/",
    "preversion": "yarn fix_asar && webpack",
    "release": "build",
    "start": "yarn watch & yarn electron",
    "watch": "webpack --progress --colors --watch"
  },
  "repository": "https://github.com/busterlabs/partyshare",
  "keywords": [],
  "author": "Ben Stahl <bhstahl@gmail.com>",
  "license": "CC0-1.0",
  "dependencies": {
    "core-js": "^2.4.1",
    "electron-log": "^2.2.2",
    "electron-updater": "^1.14.1",
    "eslint-plugin-react": "^6.10.2",
    "file-size": "^1.0.0",
    "fs-extra": "^2.1.2",
    "ipfs-geoip": "^2.2.0",
    "ipfsd-ctl": "^0.20.0",
    "klaw": "^1.3.1",
    "menubar": "^5.2.3",
    "photon": "connors/photon",
    "preact": "^7.2.0",
    "preact-compat": "^3.14.3",
    "preact-photon": "^1.3.0"
  },
  "devDependencies": {
    "@vimeo/eslint-config-player": "^5.0.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.2.2",
    "babel-preset-react": "^6.23.0",
    "electron": "^1.6.2",
    "electron-builder": "^17.0.1",
    "eslint": "^3.18.0",
    "eslint-config-standard-preact": "^1.0.1",
    "eslint-formatter-pretty": "^1.1.0",
    "webpack": "^2.2.1"
  },
  "build": {
    "appId": "partyshare.busterlabs.xyz",
    "artifactName": "${productName}.${ext}",
    "productName": "Partyshare",
    "icon": "build_assets/partyshare.icns",
    "mac": {
      "category": "storage"
    },
    "dmg": {
      "background": "build_assets/background.tiff",
      "title": "Install ${productName}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "busterlabs",
        "repo": "partyshare"
      }
    ]
  }
}
